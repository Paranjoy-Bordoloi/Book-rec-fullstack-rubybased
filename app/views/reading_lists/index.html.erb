<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Reading Lists</h1>
    <a href="/" class="btn btn-outline-secondary">Back to Home</a>
  </div>

  <% if @reading_lists.any? %>
    <div id="reading-lists-container" data-server-rendered="true">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @reading_lists.each do |rl| %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= rl.name %></h5>
                <p class="card-text text-muted mb-4">Books: <%= rl.books.count %></p>
                <div class="mt-auto">
                  <a href="<%= reading_list_path(rl) %>" class="btn btn-primary btn-sm">View</a>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div id="reading-lists-container" data-server-rendered="true">
      <p>No reading lists found.</p>
    </div>
  <% end %>
</div>
